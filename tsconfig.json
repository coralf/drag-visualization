{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings"
    ],
    "lib": [
      "ESNext",
      "DOM",
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "typings/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  }
}